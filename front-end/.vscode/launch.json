    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Firefox Debug",
            "url": "https://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "firefoxExecutable": "C:/Program Files/Mozilla Firefox/firefox.exe"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome Debug",
            "url": "https://localhost:3000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}